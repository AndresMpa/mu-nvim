snippet i "import status file"
	@import "$1";

snippet * "Default"
	:root {
		--backgroundColor: #ffffff;
		--letterColor: #000;
		--linksColor: #000;
	}

	* {
		margin: 0%;
		padding: 0%;
		overflow-anchor: none;
		color: var(--letterColor);
		$1
	}

	body {
		background-color: ${2:var(--backgroundColor)};
	}

	ul,
	li {
		text-decoration: ${3:none};
		list-style: ${4:none};
	}

	a {
		text-decoration: ${5:none};
		color: ${6:var(--linksColor)};
		$7
	}

snippet :h "Hover property"
	$1:hover ${2:{}
		$3
	}

snippet :f "Focus property"
	$1:focus ${2:{}
		$3
	}

snippet :a "Active property"
	$1:active ${2:{}
		$3
	}


snippet :d "Disabled property"
	$1:disabled ${2:{}
		$3
	}


snippet :c "Checked property"
	$1:checked ${2:{}
		$3
	}


snippet :e "Empty property"
	$1:empty ${2:{}
		$3
	}


	# Pseudo elements
snippet ::a "After pseudo element"
	$1::after ${2:{}
		$3
	}


snippet ::b "Before pseudo element"
	$1::before ${2:{}
		$3
	}


snippet ::flt "First letter pseudo element"
