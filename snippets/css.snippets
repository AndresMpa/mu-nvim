snippet ::m "Marker pseudo element"
	$1::marker ${2:{}
		$3
	}


snippet ::s "Selection pseudo element"
	$1::selection ${2:{}
		$3
	}


	# Classes
snippet .c "Classes"
	.$1 ${2:{}
		$3
	}


	# Id
snippet #i "Id"
	#$1 ${2:{}
		$3
	}


snippet media "Media queries skeleton"
	@media screen and (max-width: $1px) {
		$2
	}


snippet keyframe "Key frames animation skeleton"
	.$1 {
		animation-name: $1;
		animation-duration: $6;
	}

	@keyframes $1 {
		${2:from} {
			$4
		}

		${3:to} {
			$4
			$5
		}
	}


snippet center "Different ways to center something"
	/*Using negative position*/
	.${1:containter} {
		position: relative;
	}

	.${1:containter}--wrapper {
		margin: -25px 0 0 -25px
		position: absolute;
		left: 50%;
		top: 50%;
	}

	/*Using position*/
	.${1:containter} {
		position: relative;
	}

	.${1:containter}--wrapper {
		transform: translate(-50%, -50%);
		position: absolute;
		left: 50%;
		top: 50%;
	}

	/*Using flex*/
	.${1:containter} {
		justify-content: center;
		align-items: center;
		display: flex;
	}

	.${1:containter}--wrapper {
	}

