snippet * "Default" b
:root {
	--backgroundColor: #ffffff;
	--letterColor: #000;
	--linksColor: #000;
}

* {
	margin: 0%;
	padding: 0%;
	color: var(--letterColor);
	$1
}

body {
	background-color: ${2:var(--backgroundColor)};
}

ul,
li {
	text-decoration: ${3:none};
	list-style: ${4:none};
}

a {
	text-decoration: ${5:none};
	color: ${6:var(--linksColor)};
	$7
}
endsnippet

